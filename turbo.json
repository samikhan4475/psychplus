{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env", "tsconfig.json"],
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "API_URL",
    "KRAKEN_URL",
    "HYDRA_URL",
    "LOGIN_ENDPOINT",
    "AUTH_TOKEN_COOKIE_NAME"
  ]
}
